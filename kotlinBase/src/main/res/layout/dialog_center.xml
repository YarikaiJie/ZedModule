<?xml version="1.0" encoding="utf-8"?>
<com.module.kotlin.widget.BaseLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:minHeight="150dp"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    app:backgroundNormal="@color/white"
    app:cornerSizeBottomLeft="14dp"
    app:cornerSizeBottomRight="14dp"
    app:cornerSizeTopLeft="14dp"
    app:cornerSizeTopRight="14dp"
    android:padding="20dp"
    tools:context=".dialog.CenterDialog">

    <com.module.kotlin.widget.BaseTextView
        android:id="@+id/tvTitle"
        style="@style/TitleBText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="3"
        android:textColor="@color/color_title"
        tools:text="first lines.." />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <com.module.kotlin.widget.BaseTextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"       
        android:layout_marginBottom="20dp"
        android:textColor="@color/color_des"
        android:gravity="center"
        android:textSize="18sp"
        tools:text="@string/base" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <com.module.kotlin.widget.BaseTextView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_btn_title_cancel"
            android:textSize="18sp" />

        <com.module.kotlin.widget.BaseTextView
            android:id="@+id/btnSure"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/color_btn_title_sure"
            android:textSize="18sp"
            android:text="@string/sure" />
    </LinearLayout>
</com.module.kotlin.widget.BaseLinearLayout>
